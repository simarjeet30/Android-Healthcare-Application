<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:background="@drawable/back2"
tools:context=".LabTestDetailsActivity">

<TextView
    android:id="@+id/Healthcare"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="24*7 HealthCare"
    android:textColor="#FFEB3B"
    android:textSize="30sp"
    android:textStyle="bold" />
<TextView
    android:id="@+id/HealthcareTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="12dp"
    android:text="Deliver Location : Pune"
    android:textColor="#E6E0AD"
    android:textSize="20sp"
    android:textStyle="bold" />
<TextView
    android:id="@+id/LabTest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="12dp"
    android:text="Lab Test and Packages"
    android:textColor="#EFD816"
    android:textSize="20sp"
    android:textStyle="bold" />

<EditText
    android:layout_width="290dp"
    android:layout_height="372dp"
    android:layout_marginTop="20dp"
    android:id="@+id/editTextBody"
    android:editable="false"
    android:ems="10"
    android:gravity="start|top"
    android:inputType="textMultiLine"
    android:padding="10dp"
    android:text="Hi \nHello"
    android:textColor="@color/white"/>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textColor="#E6E0AD"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Add To Cart" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textAlignment="center" />


</LinearLayout>