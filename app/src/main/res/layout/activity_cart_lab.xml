<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:background="@drawable/background"
tools:context=".CartLabActivity">

<TextView
    android:id="@+id/Healthcare"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:text="24*7 HealthCare"
    android:textColor="#FFEB3B"
    android:textSize="30sp"
    android:textStyle="bold" />
<TextView
    android:id="@+id/HealthcareTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="12dp"
    android:text="Lab Test Cart Items"
    android:textColor="#E6E0AD"
    android:textSize="20sp"
    android:textStyle="bold" />
<TextView
    android:id="@+id/LabTest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="12dp"
    android:text="Deliver Loaction : PUNE"
    android:textColor="#EFD816"
    android:textSize="20sp"
    android:textStyle="bold" />

    <ListView
        android:id="@+id/btnlist"
        android:padding="10dp"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginBottom="90dp"/>


<TextView
    android:id="@+id/TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="12dp"
    android:text="Total Cost : 0/-"
    android:textColor="#E6E0AD"
    android:textSize="30sp"
    android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/setDateText"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textColor="#DFD369"
                android:layout_marginLeft="45dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/setDate"
                style="?android:spinnerStyle"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg"
                android:text="27/10/2022"
                android:textAlignment="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setTimeText"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:layout_marginLeft="35dp"
                android:textColor="#DFD369"
                android:textSize="14sp"
                android:textStyle="bold" />
            <!--now for selecting time we need to set custom time picker and date picker-->
            <Button
                android:id="@+id/setTime"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textAlignment="center"
                android:backgroundTint="@color/white"
                style="?android:spinnerStyle"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:text="10:00 AM" />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBack"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="20dp"
                android:layout_marginRight="72dp"
                android:text="BACK"/>
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="20dp"
                android:id="@+id/btnCheckout"
                android:layout_height="wrap_content"
                android:text="CHECKOUT"/>




        </LinearLayout>
</LinearLayout>